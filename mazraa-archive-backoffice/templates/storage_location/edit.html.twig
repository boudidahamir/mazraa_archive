{% extends 'base.html.twig' %}

{% block title %}
    {{ storageLocation.id ? 'Modifier l\'emplacement' : 'Nouvel emplacement' }} - Mazraa Archive
{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item">
        <a href="{{ path('app_storage_locations_index') }}">Emplacements</a>
    </li>
    <li class="breadcrumb-item active">
        {{ storageLocation.id ? 'Modifier' : 'Nouveau' }}
    </li>
{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="page-title">
            <i class="fas fa-{{ storageLocation.id ? 'edit' : 'plus-circle' }} me-2"></i>
            {{ storageLocation.id ? 'Modifier l\'emplacement' : 'Nouvel emplacement' }}
            {% if storageLocation.id %}
                <small class="text-muted fs-6 ms-2">#{{ storageLocation.id }}</small>
            {% endif %}
        </h1>
        <a href="{{ path('app_storage_locations_index') }}" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Retour à la liste
        </a>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-white py-3">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i>Informations de l'emplacement
                    </h5>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.code) }}
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="fas fa-hashtag"></i>
                                        </span>
                                        {{ form_widget(form.code, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                    {{ form_errors(form.code) }}
                                    <small class="form-text text-muted">
                                        <i class="fas fa-info-circle me-1"></i>Code unique de l'emplacement
                                    </small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.name) }}
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="fas fa-warehouse"></i>
                                        </span>
                                        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                    {{ form_errors(form.name) }}
                                    <small class="form-text text-muted">
                                        <i class="fas fa-info-circle me-1"></i>Nom descriptif de l'emplacement
                                    </small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.shelf) }}
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="fas fa-layer-group"></i>
                                        </span>
                                        {{ form_widget(form.shelf, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                    {{ form_errors(form.shelf) }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.row) }}
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="fas fa-grip-lines"></i>
                                        </span>
                                        {{ form_widget(form.row, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                    {{ form_errors(form.row) }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.box) }}
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="fas fa-box"></i>
                                        </span>
                                        {{ form_widget(form.box, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                    {{ form_errors(form.box) }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.capacity) }}
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="fas fa-boxes"></i>
                                        </span>
                                        {{ form_widget(form.capacity, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                    {{ form_errors(form.capacity) }}
                                    <small class="form-text text-muted">
                                        <i class="fas fa-info-circle me-1"></i>Capacité maximale de stockage
                                    </small>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    {{ form_label(form.description) }}
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="fas fa-align-left"></i>
                                        </span>
                                        {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': '3'}}) }}
                                    </div>
                                    {{ form_errors(form.description) }}
                                    <small class="form-text text-muted">
                                        <i class="fas fa-info-circle me-1"></i>Description détaillée de l'emplacement
                                    </small>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-check form-switch">
                                    {{ form_widget(form.isActive, {'attr': {'class': 'form-check-input'}}) }}
                                    {{ form_label(form.isActive, null, {'label_attr': {'class': 'form-check-label'}}) }}
                                </div>
                            </div>
                        </div>

                        <div class="mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-{{ storageLocation.id ? 'save' : 'plus-circle' }} me-2"></i>
                                {{ storageLocation.id ? 'Mettre à jour' : 'Créer l\'emplacement' }}
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i>Aide
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <h6><i class="fas fa-hashtag me-2"></i>Code</h6>
                        <p class="text-muted small">Le code doit être unique et servira à identifier rapidement l'emplacement.</p>
                    </div>
                    <div class="mb-3">
                        <h6><i class="fas fa-warehouse me-2"></i>Nom</h6>
                        <p class="text-muted small">Donnez un nom descriptif qui permettra de localiser facilement l'emplacement.</p>
                    </div>
                    <div class="mb-3">
                        <h6><i class="fas fa-boxes me-2"></i>Capacité</h6>
                        <p class="text-muted small">Définissez la capacité maximale de documents que peut contenir cet emplacement.</p>
                    </div>
                    <div>
                        <h6><i class="fas fa-toggle-on me-2"></i>Statut</h6>
                        <p class="text-muted small">Un emplacement inactif ne pourra pas recevoir de nouveaux documents.</p>
                    </div>
                </div>
            </div>

            {% if storageLocation.id %}
                <div class="card shadow-sm">
                    <div class="card-header bg-white py-3">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-history me-2"></i>Historique
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="timeline">
                            <div class="timeline-item">
                                <div class="timeline-marker bg-primary">
                                    <i class="fas fa-plus"></i>
                                </div>
                                <div class="timeline-content">
                                    <h6 class="mb-1">Création</h6>
                                    <small class="text-muted">
                                        <i class="fas fa-calendar me-1"></i>
                                        {{ storageLocation.createdAt|date('d/m/Y H:i') }}
                                    </small>
                                </div>
                            </div>
                            {% if storageLocation.updatedAt %}
                                <div class="timeline-item">
                                    <div class="timeline-marker bg-info">
                                        <i class="fas fa-edit"></i>
                                    </div>
                                    <div class="timeline-content">
                                        <h6 class="mb-1">Dernière modification</h6>
                                        <small class="text-muted">
                                            <i class="fas fa-calendar me-1"></i>
                                            {{ storageLocation.updatedAt|date('d/m/Y H:i') }}
                                        </small>
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
<style>
.timeline {
    position: relative;
    padding: 0;
    list-style: none;
}

.timeline:before {
    content: '';
    position: absolute;
    top: 0;
    bottom: 0;
    left: 20px;
    width: 2px;
    background: var(--bs-gray-200);
}

.timeline-item {
    position: relative;
    padding-left: 50px;
    margin-bottom: 20px;
}

.timeline-marker {
    position: absolute;
    left: 15px;
    width: 12px;
    height: 12px;
    border-radius: 50%;
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
}

.timeline-marker i {
    font-size: 8px;
}

.timeline-content {
    padding: 10px 0;
}
</style>
{% endblock %}
