{% extends 'base.html.twig' %}

{% block title %}Emplacements de stockage{% endblock %}

{% block body %}
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Emplacements de stockage</h1>
            <a href="{{ path('app_storage_locations_new') }}" class="btn btn-primary">
                <i class="fas fa-plus"></i> Nouvel emplacement
            </a>
        </div>

        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Description</th>
                        <th>Capacité</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for location in locations %}
                        <tr>
                            <td>{{ location.name }}</td>
                            <td>{{ location.description }}</td>
                            <td>{{ location.capacity }}</td>
                            <td>
                                <div class="btn-group">
                                    <a href="{{ path('app_storage_locations_show', {'id': location.id}) }}" class="btn btn-sm btn-info">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path('app_storage_locations_edit', {'id': location.id}) }}" class="btn btn-sm btn-warning">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form method="post" action="{{ path('app_storage_locations_delete', {'id': location.id}) }}" style="display: inline-block" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet emplacement ?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ location.id) }}">
                                        <button class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="text-center">Aucun emplacement trouvé</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %} 