{% extends 'base.html.twig' %}

{% block title %}{{ document.id ? 'Modifier' : 'Nouveau' }} document{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>{{ document.id ? 'Modifier' : 'Nouveau' }} document</h1>
        <a href="{{ path('app_documents_index') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Retour à la liste
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.title) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.type) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.code) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.storageLocation) }}
                    </div>
                </div>

                {{ form_row(form.description) }}
                {{ form_row(form.status) }}

                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> {{ document.id ? 'Mettre à jour' : 'Créer' }}
                    </button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %} 