<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Journal d'audit - {{ date|date('d/m/Y H:i:s') }}</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            font-size: 12px;
        }
        h1 {
            color: #333;
            font-size: 24px;
            margin-bottom: 20px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #f5f5f5;
            font-weight: bold;
        }
        tr:nth-child(even) {
            background-color: #f9f9f9;
        }
        .header {
            margin-bottom: 30px;
        }
        .footer {
            margin-top: 30px;
            text-align: center;
            font-size: 10px;
            color: #666;
        }
        .badge {
            padding: 2px 6px;
            border-radius: 3px;
            font-size: 11px;
            color: white;
        }
        .bg-success { background-color: #28a745; }
        .bg-warning { background-color: #ffc107; }
        .bg-danger { background-color: #dc3545; }
        .bg-info { background-color: #17a2b8; }
        .bg-secondary { background-color: #6c757d; }
        .bg-light { background-color: #f8f9fa; color: #333; }
    </style>
</head>
<body>
    <div class="header">
        <h1>Journal d'audit - Mazraa Archive</h1>
        <p>Généré le {{ date|date('d/m/Y à H:i:s') }}</p>
    </div>

    <table>
        <thead>
            <tr>
                <th>Date/Heure</th>
                <th>Utilisateur</th>
                <th>Action</th>
                <th>Type d'entité</th>
                <th>ID Entité</th>
                <th>Détails</th>
                <th>IP</th>
            </tr>
        </thead>
        <tbody>
            {% for log in logs %}
                <tr>
                    <td>{{ log.createdAt|date('d/m/Y H:i:s') }}</td>
                    <td>{{ log.username }}</td>
                    <td>
                        {% set actionLabels = {
                            'CREATE': 'Création',
                            'UPDATE': 'Modification',
                            'DELETE': 'Suppression',
                            'LOGIN': 'Connexion',
                            'LOGOUT': 'Déconnexion',
                            'CREATE_DOCUMENT': 'Création de document',
                            'UPDATE_DOCUMENT': 'Modification de document',
                            'DELETE_DOCUMENT': 'Suppression de document',
                            'CREATE_USER': 'Création d\'utilisateur',
                            'UPDATE_USER': 'Modification d\'utilisateur',
                            'DELETE_USER': 'Suppression d\'utilisateur',
                            'CHANGE_PASSWORD': 'Changement de mot de passe',
                            'CREATE_STORAGE_LOCATION': 'Création d\'emplacement',
                            'UPDATE_STORAGE_LOCATION': 'Modification d\'emplacement',
                            'DELETE_STORAGE_LOCATION': 'Suppression d\'emplacement',
                            'GENERATE_BARCODE': 'Génération de code-barres',
                            'GENERATE_BARCODE_IMAGE': 'Génération d\'image de code-barres',
                            'VALIDATE_BARCODE': 'Validation de code-barres',
                            'SYNC_CHANGES': 'Synchronisation',
                            'MARK_SYNCED': 'Marqué comme synchronisé',
                            'RESOLVE_CONFLICT': 'Résolution de conflit',
                            'ARCHIVE': 'Archivage',
                            'DESTROY': 'Destruction'
                        } %}
                        {% set actionInfo = {
                            'CREATE': {class: 'bg-success'},
                            'UPDATE': {class: 'bg-warning'},
                            'DELETE': {class: 'bg-danger'},
                            'LOGIN': {class: 'bg-info'},
                            'LOGOUT': {class: 'bg-secondary'},
                            'CREATE_DOCUMENT': {class: 'bg-success'},
                            'UPDATE_DOCUMENT': {class: 'bg-warning'},
                            'DELETE_DOCUMENT': {class: 'bg-danger'},
                            'CREATE_USER': {class: 'bg-success'},
                            'UPDATE_USER': {class: 'bg-warning'},
                            'DELETE_USER': {class: 'bg-danger'},
                            'CHANGE_PASSWORD': {class: 'bg-info'},
                            'CREATE_STORAGE_LOCATION': {class: 'bg-success'},
                            'UPDATE_STORAGE_LOCATION': {class: 'bg-warning'},
                            'DELETE_STORAGE_LOCATION': {class: 'bg-danger'},
                            'GENERATE_BARCODE': {class: 'bg-info'},
                            'GENERATE_BARCODE_IMAGE': {class: 'bg-info'},
                            'VALIDATE_BARCODE': {class: 'bg-info'},
                            'SYNC_CHANGES': {class: 'bg-info'},
                            'MARK_SYNCED': {class: 'bg-info'},
                            'RESOLVE_CONFLICT': {class: 'bg-warning'},
                            'ARCHIVE': {class: 'bg-secondary'},
                            'DESTROY': {class: 'bg-danger'}
                        } %}
                        {% set info = actionInfo[log.action]|default({class: 'bg-light'}) %}
                        <span class="badge {{ info.class }}">{{ actionLabels[log.action]|default(log.action) }}</span>
                    </td>
                    <td>{{ log.entityType }}</td>
                    <td>{{ log.entityId }}</td>
                    <td>{{ log.details }}</td>
                    <td>{{ log.ipAddress }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="footer">
        <p>Mazraa Archive - Rapport d'audit - Page 1</p>
    </div>
</body>
</html> 