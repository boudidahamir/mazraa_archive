{% extends 'base.html.twig' %}

{% block title %}Détails du document{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Détails du document</h1>
        <div>
            <a href="{{ path('app_documents_edit', {'id': document.id}) }}" class="btn btn-warning">
                <i class="fas fa-edit"></i> Modifier
            </a>
            <a href="{{ path('app_documents_index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Retour à la liste
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <table class="table">
                <tbody>
                    <tr>
                        <th>Code</th>
                        <td>{{ document.barcode }}</td>
                    </tr>
                    <tr>
                        <th>Titre</th>
                        <td>{{ document.title }}</td>
                    </tr>
                    <tr>
                        <th>Type</th>
                        <td>{{ document.documentTypeName  }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ document.description }}</td>
                    </tr>
                    <tr>
                        <th>Statut</th>
                        <td>
                            {% if document.status == 'ACTIVE' %}
                <span class="badge bg-success">Actif</span>
            {% elseif document.status == 'ARCHIVED' %}
                <span class="badge bg-warning">Archivé</span>
            {% elseif document.status == 'RETRIEVED' %}
                <span class="badge bg-info">Retiré</span>
            {% elseif document.status == 'DESTROYED' %}
                <span class="badge bg-danger">Détruit</span>
            {% else %}
                <span class="badge bg-secondary">Inconnu</span>
            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <th>Emplacement</th>
                        <td>
                            {% if document.storageLocationCode %}
    {{ document.storageLocationCode }}
{% else %}
    <span class="text-muted">Non assigné</span>
{% endif %}

                        </td>
                    </tr>
                    <tr>
                        <th>Date de création</th>
                        <td>{{ document.createdAt ? document.createdAt|date('d/m/Y H:i') : 'N/A' }}</td>
                    </tr>
                    <tr>
                        <th>Dernière modification</th>
                        <td>{{ document.updatedAt ? document.updatedAt|date('d/m/Y H:i') : 'N/A' }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %} 