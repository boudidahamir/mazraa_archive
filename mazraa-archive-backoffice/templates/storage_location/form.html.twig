{% extends 'base.html.twig' %}

{% block title %}{{ storageLocation.id ? 'Modifier' : 'Nouvel' }} emplacement{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>{{ storageLocation.id ? 'Modifier' : 'Nouvel' }} emplacement</h1>
        <a href="{{ path('app_storage_locations_index') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Retour à la liste
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.name) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.path) }}
                    </div>
                </div>
                {{ form_row(form.description) }}
                {{ form_row(form.isActive) }}

                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> {{ storageLocation.id ? 'Mettre à jour' : 'Créer' }}
                    </button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %} 