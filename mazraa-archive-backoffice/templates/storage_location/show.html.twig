{% extends 'base.html.twig' %}

{% block title %}Détails de l'emplacement{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Détails de l'emplacement</h1>
        <div>
            <a href="{{ path('app_storage_locations_edit', {'id': storageLocation.id}) }}" class="btn btn-warning">
                <i class="fas fa-edit"></i> Modifier
            </a>
            <a href="{{ path('app_storage_locations_index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Retour à la liste
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <table class="table">
                <tbody>
                    <tr>
                        <th>Nom</th>
                        <td>{{ storageLocation.name }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ storageLocation.description }}</td>
                    </tr>
                    <tr>
                        <th>Chemin</th>
                        <td>{{ storageLocation.path }}</td>
                    </tr>
                    <tr>
                        <th>Statut</th>
                        <td>
                            {% if storageLocation.isActive %}
                                <span class="badge bg-success">Actif</span>
                            {% else %}
                                <span class="badge bg-danger">Inactif</span>
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <th>Date de création</th>
                        <td>{{ storageLocation.createdAt ? storageLocation.createdAt|date('d/m/Y H:i') : 'N/A' }}</td>
                    </tr>
                    <tr>
                        <th>Dernière modification</th>
                        <td>{{ storageLocation.updatedAt ? storageLocation.updatedAt|date('d/m/Y H:i') : 'N/A' }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %} 